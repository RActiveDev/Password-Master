<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nikoskalai.passwordmasterandroid.MainFrameFragment"
    tools:showIn="@layout/activity_main_frame">

    <ImageView
        android:id="@+id/websiteLogiView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/websiteTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/websiteLogiView"
        app:layout_constraintRight_toLeftOf="@+id/favoriteCheckBox"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/websiteLogiView"
        app:layout_constraintRight_toLeftOf="@+id/favoriteCheckBox"
        tools:layout_editor_absoluteY="44dp" />

    <CheckBox
        android:id="@+id/favoriteCheckBox"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="2dp"
        android:button="@android:drawable/btn_star"
        android:checked="false"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="16dp" />
</android.support.constraint.ConstraintLayout>
